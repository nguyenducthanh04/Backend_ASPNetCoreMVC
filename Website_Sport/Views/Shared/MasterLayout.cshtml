<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ThanhNguyen | Shop - Sport</title>
    <link rel="stylesheet" href="../MasterLayout/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>

    <div class="header">
        <div class="container">
            <div class="navbar">
                <div class="logo">
                    <a href="index.html"><img src="../MasterLayout/images/logo.png" width="125px"></a>
                </div>
                <nav>
                    <ul id="MenuItems">
                        <li><a href="/home">Home</a></li>
                        <li><a href="/products">Products</a></li>
                        <li><a href="">About</a></li>
                        <li><a href="">Contact</a></li>
                        <li><a href="/account">Account</a></li>
                    </ul>
                </nav>
                <a href="/cart"><img src="../MasterLayout/images/cart.png" width="30px" height="30px"></a>
                <span id="totalQuantity" style="margin-top: 16px; color: red; width: 24px; height: 24px; border: 1px solid #ccc; text-align: center; background-color: #ccc; border-radius: 50%"></span>
                <img src="../MasterLayout/images/menu.png" class="menu-icon"
                     onclick="menutoggle()">
            </div>
            <script>
                function countLocalStorageItems() {
                    var count = 0;
                    const cartItems = JSON.parse(localStorage.getItem('cart')) || [];
                    for (var i = 0; i < cartItems.length; i++) {
                            count++;  
                    }
                    return count;
                }
                var numberOfItems = countLocalStorageItems();
                const resultQuantity = document.getElementById("totalQuantity");
                resultQuantity.textContent = numberOfItems;
            </script>
        </div>
    </div>
    <div>@RenderBody()</div>
    <!-- ------------footer----------- -->

    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col-1">
                    <h3>Download Our App</h3>
                    <p>Download App for Android and ios mobile phone</p>
                    <div class="app-logo">
                        <img src="../MasterLayout/images/play-store.png">
                        <img src="../MasterLayout/images/app-store.png">
                    </div>
                </div>
                <div class="footer-col-2">
                    <img src="../MasterLayout/images/2.png">
                    <p>
                        Our Purpose Is To Sustainably Make the Pleasure and
                        Benefits of Sports Accessible to the Many
                    </p>
                </div>
                <div class="footer-col-3">
                    <h3>Useful Links</h3>
                    <ul>
                        <li>Coupons</li>
                        <li>Blog Post</li>
                        <li>Return Policy</li>
                        <li>Join Affiliate</li>
                    </ul>
                </div>
                <div class="footer-col-4">
                    <h3>Follow us</h3>
                    <ul>
                        <li>Facebook</li>
                        <li>Twitter</li>
                        <li>Instagram</li>
                        <li>Youtube </li>
                    </ul>
                </div>
            </div>
            <hr>
            <p class="Copyright">Copyright 2024 - By DucThanh</p>
        </div>
    </div>
    <!-- ------------------- js for toggle menu-------------- -->
    <script>
        var MenuItems = document.getElementById("MenuItems");

        MenuItems.style.maxHeight = "0px";

        function menutoggle(){
            if(MenuItems.style.maxHeight == "0px")
            {
                MenuItems.style.maxHeight = "200px";
            }
        else
            {
                MenuItems.style.maxHeight = "0px";
            }
        }

    </script>
</body>
</html>