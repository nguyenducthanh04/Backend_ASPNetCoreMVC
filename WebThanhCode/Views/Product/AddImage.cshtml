@model WebThanhCode.Models.Image

@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var idString = ViewContext.RouteData.Values["id"]?.ToString();
    int id;
}

<h5 style="margin-bottom: 30px">Thêm hình ảnh</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Product" asp-action="AddImage" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Image1" class="control-label"></label>
                <input type="file" name="ImageFile" /> 
                @* <input type="file" name="images" multiple /> *@
                <span asp-validation-for="Image1" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Main" class="control-label"></label>
                <input asp-for="Main" value="1" class="form-control" />
                <span asp-validation-for="Main" class="text-danger"></span>
            </div>
          @{  if (int.TryParse(idString, out id))
            {
            <div class="form-group" hidden>
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" value="@id" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            }
          }
            <div class="form-group" style="margin-top: 20px; margin-bottom: 12px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

