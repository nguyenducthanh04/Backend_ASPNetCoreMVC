@model WebThanhCode.Models.Category
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h5 style="margin-bottom: 30px;">Add new category</h5>
<div class="container">
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <input asp-for="CategoryName" placeholder="Name Category" class="form-control" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </form>
</div>


